# Rename this file to .env
# Environment: local, production
ENVIRONMENT=local

# Server port (local development only)
PORT=8080

# Database connection string
# Local: postgres://jobscanner:password@localhost:5433/jobscanner?sslmode=disable
# Production: postgres://user:password@your-rds-endpoint:5432/dbname?sslmode=require
DATABASE_URL=postgres://jobscanner:password@localhost:5433/jobscanner?sslmode=disable

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRY_HOURS=24

